<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= render 'follow_form' if signed_in? %>
      
      <% unless @user.tuckers.empty? %>
        <ul class="tuckers">
          <%= render @tuckers %> 
        </ul>
        <%= will_paginate @tuckers %>
      <% end%>
    </td>
    <td class="sidebar round">
      <strong>Name</strong> <%= @user.name %><br />
      <strong>URL</strong>  <%= link_to user_path(@user), @user %><br />
      <strong>Tuckers</strong> <%= @user.tuckers.count %>
      <%= render 'shared/stats' %>
    </td>
  </tr>
</table>
