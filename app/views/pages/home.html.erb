<% if signed_in? %>
  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="tucker">Add tucker to the map!</h1>
        <%= render 'shared/tucker_form' %>
        <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
      </td>
    </tr>
  </table>
<% else %>
  <h1>ForageMaps</h1>
  <p>
    This is the home page for 
    <a href="http://foragemaps.com/">ForageMaps</a>.
  </p>

  <%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>
<% end %>
